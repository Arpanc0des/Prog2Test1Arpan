<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="330.0" prefWidth="530.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.prog2lab1arpan.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <Pane prefHeight="300.0" prefWidth="450.0">
        <children>

            <Label layoutX="173.0" layoutY="53.0" prefHeight="36.0" prefWidth="144.0" text="Sign In Form">
                <font>
                    <Font size="25.0" />
                </font>
            </Label>
            <Button layoutX="219.0" layoutY="205.0" onAction="#onHelloButtonClick" text="Sign In" />
            <GridPane layoutX="121.0" layoutY="117.0" prefHeight="58.0" prefWidth="249.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="92.0" minWidth="10.0" prefWidth="63.0" />
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="186.0" minWidth="10.0" prefWidth="186.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <Label text="User :" />
                    <Label text="Password : " GridPane.rowIndex="1" />
                    <TextField fx:id="userInput" GridPane.columnIndex="1" />
                    <PasswordField fx:id="passwordInput" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                </children>
            </GridPane>
            <Label fx:id="errorMessage" layoutX="323.0" layoutY="269.0" />
        </children>
    </Pane>
</VBox>
